{
  "name": "@level9gg/app-kit",
  "version": "0.0.0",
  "private": true,
  "description": "Level9.GG App Kit is the fastest way to create new Node.js applications, the Level9.GG way!",
  "main": "dist/main.js",
  "scripts": {
    "clean": "rimraf dist/",
    "build": "tsc",
    "build:dev": "tsc -w",
    "build:bundle": "esbuild ./src/main.ts --bundle --platform=node --target=node18.12.1 --outdir=dist",
    "start": "cross-env NODE_ENV=production dotenv -e .env.production -- node dist/main.js",
    "start:dev": "cross-env NODE_ENV=development dotenv -e .env.development -- tsc-watch -p ./tsconfig.json --onSuccess \"nodemon ./dist/main.js\"",
    "lint": "eslint --fix src/",
    "prettier": "prettier --write src/",
    "test": "vitest src/",
    "prepare": "husky install"
  },
  "keywords": [
    "level9gg",
    "starter kit"
  ],
  "author": "Gabriel Mangiurea",
  "license": "Unlicensed",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.21",
    "prettier": "2.8.4",
    "rimraf": "^4.3.1",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2"
  },
  "dependencies": {
    "dotenv-cli": "^7.0.0",
    "env-var": "^7.3.0",
    "esbuild": "0.17.11"
  },
  "engines": {
    "node": ">=18.12.1"
  }
}
